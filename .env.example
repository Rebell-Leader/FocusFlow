# FocusFlow Configuration

# Launch Mode: 'demo' for HuggingFace Spaces, 'local' for local development
LAUNCH_MODE=demo

# AI Provider: 'openai', 'anthropic', or 'vllm'
AI_PROVIDER=openai

# API Keys (only needed if using openai or anthropic)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# vLLM Configuration (only needed if AI_PROVIDER=vllm)
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_MODEL=ibm-granite/granite-4.0-h-1b
VLLM_API_KEY=EMPTY

# Monitor Configuration
MONITOR_INTERVAL=30
